    function func3() {
       document.getElementById("otvet3").innerHTML ="";
      var a = Number(document.getElementById("a_f3_znach").value);
      var b = Number(document.getElementById("b_f3_znach").value);
     var x=b-a+1;
     var sum=0;
      var i =0; 

      while (a <= b) {
        sum=sum+a;

        document.getElementById("otvet3").innerHTML = document.getElementById("otvet3").innerHTML + a + " " +sum +"<br>" ;
        a++;
      }
       document.getElementById("otvet3").innerHTML = document.getElementById("otvet3").innerHTML  +sum/x +"<br>" ;
       
      
       
      document.getElementById("otvet3").innerHTML = document.getElementById("otvet3").innerHTML + a +" "+sum + "<br> "; 
      i++; 
      a++; 
 
    }

     function func4() {
       document.getElementById("otvet4").innerHTML ="";
      var a = Number(document.getElementById("a_f4_znach").value);
      var b = Number(document.getElementById("b_f4_znach").value);
     var sum=0;
      while (a <= b) {
        sum=sum+a*a;
        document.getElementById("otvet4").innerHTML = document.getElementById("otvet4").innerHTML + a + " " +sum +"<br>" ;
        a++;
        
      }
       
    }
    
function func5() { 
